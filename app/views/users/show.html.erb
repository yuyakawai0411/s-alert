<%= render "shared/header"%>

<%= render "shared/side-menu" %>

<%# プロフィール詳細 %>
<div class="profile">
<h1 class="profile-tile"><%= "#{@user.first_name}さんのプロフィール"%></h1>
  
  <div class="card">
    <ul class="card-list">
      <div class="card-right">
      <%# 氏名 %>
      <li class="card-name">氏名
        <ul class="name-list">
          <li class="first-name"><%= @user.first_name %></li>
          <li class="last-name"><%= @user.last_name %></li>
          <li class="first-name-kana"><%= @user.first_name_kana %></li>
          <li class="last-name-kana"><%= @user.last_name_kana %></li>
        </ul>
      </li>
      
      <%# 会社・部署 %>
      <li class="card-company">会社/部署
        <ul class="company-list">
          <li class="company-name"><%= @user.company %></li>
          <li class="company-form"><%= @user.company_form_id%></li>
          <li class="department"><%= @user.department %></li>
        </ul>
      </li>
      
      <%# 電話番号 %>
      <li class="card-phone">電話番号
        <%= @user.phone_number%>
      </li>
        
      <%# 誕生日 %>
      <li class="card-birtday">誕生日
        <%= @user.birth_day %>
      </li>
      
      </div>

      <div class="card-left">
      <%# 人物画像 %>
      <li calss="card-image">
        <%= image_tag "sample_image.png", class: "card-ditail-image" %>
      </li>
      </div>
    </ul>
  </div>

  <div class="bio-resim-baddate">
    バイオリズム不調日
    <p><%= @bad_date[1][0] %></p>
    <p><%= @bad_date[0][0] %></p>
  </div>

</div>

<%# 投稿カード一覧 %>
<section class="user-cards">
  <div class="cards">
    <h2 class="page-heading"><%= "#{@user.first_name}さんのプロトタイプ"%></h2>
    <%= render partial: "shared/card-format" , locals: { cards: @cards }%>
  </div>
</section>

<%# お気に入り一覧 %>
<section class="user-favorites">
  <div class="favorites">
    <h2 class="page-heading"><%= "#{@user.first_name}さんのお気に入り"%></h2>
    <%= render partial: "shared/favorite-format" , locals: { favorites: @favorites }%>
  </div>
</section>

<%= render "shared/footer" %>
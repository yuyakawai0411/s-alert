<%= render "shared/header"%>

<div class="main-background">
  <div class="container">
    <div class="main row">
    <%# サイドメニュー %>
      <div class="side-menu col-2">
        <%= render "shared/side-menu" %>
      </div>

      <div class="user-profile col-10">
        <%# ユーザープロフィール %>
        <h1 class="share-cards-title"><%= "#{@user.last_name}さんのプロフィール"%></h1>
        
        <div class="profile d-flex">
          <ul>
          <div class="card-info d-flex justify-content-between">
          
            <div class="card-info-left">
              <%# ユーザープロフィール_写真 %>
                <li calss="card-image">
                  <%= image_tag "boss.png", size: '100x100' %>
                </li>
              <%# ユーザープロフィール_編集_削除 %>
                <div class="user-info-edit">
                  <%if user_signed_in? %>
                    <% if @user.id == current_user.id %>
                      <%=link_to "編集", edit_user_path(@user.id) %>
                      <%=link_to "削除", user_path(@user.id), method: :delete %>
                    <% end %>
                  <% end %>
                </div>
            </div>

            <div class="card-info-right">
              <%# ユーザープロフィール_氏名 %>
              <li class="card-name">
                <ul>
                  <li class="name"><%= "#{@user.last_name} #{@user.first_name}" %></li>
                  <li class="kana"><%= "#{@user.last_name_kana} #{@user.first_name_kana}" %></li>
                </ul>
              </li>
          
              <%# ユーザープロフィール_会社・部署 %>
              <li class="card-company">
                <ul class="company-list">
                  <li class="company-name"><%= "#{@user.company} #{@user.company_form.form}" %></li>
                  <li class="department"><%= @user.department %></li>
                </ul>
              </li>
          
              <%# ユーザープロフィール_電話番号 %>
              <li class="card-phone">
                <%= @user.phone_number%>
              </li>
              
            </div>
          </div>
        </ul>

          <%# ユーザープロフィール_不安定日 %>
          <div class="bio-resim-baddate">
            <p class="name">不安定日</p>
            <p><%= @unstable[1][0] %></p>
            <p><%= @unstable[0][0] %></p>
          </div>

        </div>
        <%# ユーザー投稿済み名刺一覧 %>
        <section class="user-cards record-list">
          <div class="cards">
            <h2 class="page-heading"><%= "投稿名刺一覧"%></h2>
            <%= render partial: "shared/card-format" , locals: { cards: @cards }%>
             <%= link_to "もっと見る", post_cards_user_path(@user.id), id: 'user-card-all' %>
          </div>
        </section>

        <%# ユーザーお気に入り一覧 %>
        <section class="user-favorites record-list">
          <div class="favorites">
            <h2 class="page-heading"><%= "お気に入り"%></h2>
            <%= render partial: "shared/card-format" , locals: { cards: @favorites }%>
            <%= link_to "もっと見る", favorite_cards_user_path(@user.id), id: 'user-favorite-all' %>
          </div>
        </section>
      </div>
    </div>
  </div>
</div>
<%= render "shared/footer" %>
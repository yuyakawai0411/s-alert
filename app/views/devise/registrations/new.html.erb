<%= render "shared/header"%>

<h3>ユーザー新規登録</h3>

<%= form_with model: @user, url: user_registration_path, local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  
  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_area :last_name,  placeholder:"例) 山田" %>
  </div>
  
  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_area :first_name,  placeholder:"例) 陸太郎" %>
  </div>

    <div class="field">
    <%= f.label :last_name_kana %><br />
    <%= f.text_area :last_name_kana,  placeholder:"例) ヤマダ" %>
  </div>
  
  <div class="field">
    <%= f.label :first_name_kana %><br />
    <%= f.text_area :first_name_kana,  placeholder:"例) リクタロウ" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(半角英数混合<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :company %><br />
    <%= f.text_area :company, placeholder:"例) YR株式会社" %>
  </div>

  <div class="field">
    <%= f.label :company_form_id %><br />
    <%= f.collection_select(:company_form_id, CompanyForm.all, :id, :form, {}, {class:"select-box", id:"item-category"})%>
  </div>  

  <div class="field">
    <%= f.label :department %><br />
    <%= f.text_area :department, placeholder:"例) 営業部" %>
  </div>

  <div class="field">
    <%= f.label :phone_number %><br />
    <%= f.text_area :phone_number, placeholder:"例) 090-1234-5678" %>
  </div>

  <div class='birthday-input'>
      <%= raw sprintf(
           f.date_select(
                    :birth_day,
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1930,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
            "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
  </div>

  <div class="actions">
    <%= f.submit "登録" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

<%= render "shared/footer" %>
<%= render "shared/header"%>
<div class="main-background"> 
  <div class="container">
    <div class="main row">

      <%# サイドメニュー %>
      <div class="side-menu col-2">
      </div>
    
      <div class="card-registration col-10">
        <h1 class="share-cards-title">ユーザー新規登録</h1>

        <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
        <table>
          <tr class="user-name d-flex align-items-start">
            <td class="name-tag tag">名前</td>
            <td class="indispensable"><span class="indispensable-tag">必須</span></td>
            <td class="name-filed text-filed">
              <div class="name-kanji d-flex">
                <div class="last-name-kanji">
                  <%= f.text_field :last_name,  placeholder:"例) 山田" ,class: 'name_field' %>
                  <%= f.label :last_name %>
                </div>

                <div class="last-name-kanji">
                  <%= f.text_field :first_name,  placeholder:"例) 陸太郎" ,class: 'name_field' %>
                  <%= f.label :first_name %>
                </div>    
              </div>

              <div class="name-kana d-flex">
                <div class="last_name_kana">
                  <%= f.text_field :last_name_kana,  placeholder:"例) ヤマダ" ,class: 'name_field'%>
                  <%= f.label :last_name_kana %>
                </div>

                <div class="first_name_kana">      
                  <%= f.text_field :first_name_kana,  placeholder:"例) リクタロウ" ,class: 'name_field'%>
                  <%= f.label :first_name_kana %>
                </div>
              </div>
            </td>
          </tr>

          <tr class="user-email d-flex align-items-start">
            <td class="email-tag tag">メールアド<br>レス</td>
            <td class="indispensable"><span class="indispensable-tag">必須</span></td>
            <td class="email-filed text-filed">
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </td>
          </tr>

          <tr class="user-password d-flex align-items-start">
            <td class="password-tag tag">パスワード</td>
            <td class="indispensable"><span class="indispensable-tag">必須</span></td>
            <td class="password-filed text-filed">
              <%= f.password_field :password, autocomplete: "new-password" %>
              <%= f.label '(英数混合6文字以上)' %>
            </td>
          </tr>

          <tr class="user-password-confirm d-flex align-items-start">
            <td class="password-confirm-tag tag">パスワード<br>確認用</td>
            <td class="indispensable"><span class="indispensable-tag">必須</span></td>
            <td class="password-confirm-filed text-filed">
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </td>
          </tr>

          <tr class="user-company d-flex align-items-start">
            <td class="company-tag tag">会社</td>
            <td class="indispensable"><span class="indispensable-tag">必須</span></td>
            <td class="company-filed text-filed">
              <div class="company-name-only d-flex">
                <div class="company-name text-filrd"> 
                  <%= f.text_field :company, placeholder:"例) YR株式会社",class: 'company_field' %>
                  <%= f.label :company %>
                </div>
                <div class="company-filed text-filrd"> 
                  <%= f.collection_select(:company_form_id, CompanyForm.all, :id, :form, {}, {class:"select-box", id:"item-category"})%>
                  <%= f.label :company_form_id %>
                </div>  
              </div>

              <div class="company-department text-filed">
                <%= f.text_field :department, placeholder:"例) 営業部",class: 'company_field' %>
                <br><%= f.label :department %>
              </div>
            </td>
          </tr>

          <tr class="card-phone_number d-flex align-items-start">
            <td class="phone_number-tag tag">電話番号</td>
            <td class="indispensable"><span class="indispensable-tag">必須</span></td>
            <td class="text-filed text-filed">
              <%= f.text_field :phone_number, placeholder:"例) 090-1234-5678" %>
            </td>
          </tr>

          <tr class="card-birthday d-flex align-items-start">
            <td class='birthday-tag tag'><label class="birthday-day">生年月日</label></td>
            <td class="indispensable"><span class="indispensable-tag">必須</span></td>
            <td class='birthday-filed text-filed d-flex align-items-start'>
              <%= raw sprintf(
                  f.date_select(
                            :birth_day,
                            use_month_numbers: true,
                            prompt:'--',
                            start_year: 1930,
                            end_year: (Time.now.year - 5),
                            date_separator: '%s'),
                    "年", "月" ) + "日" %>
            </td>
          </tr>
        </table>
    
          <div class="sell-btn-contents">
            <%= f.submit "登録",class:"btn btn-dark btn-lg"  %>
          </div>

        <% end %>
      </div>
    </div> 
  </div> 
</div>
</div>
  <%= render "shared/footer" %>
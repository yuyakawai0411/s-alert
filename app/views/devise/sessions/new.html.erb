<%= render "shared/header"%>
<div class="main-background"> 
  <div class="container">
    <div class="main row">

      <%# サイドメニュー %>
      <div class="side-menu col-2">
      </div>
    
      <div class="card-registration col-10">
      <%# ログインフォーム %>
        <h1 class="share-cards-title">ユーザーログイン</h1>

          <%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>
            <div class='login-flash-message'>
              <%= flash[:notice] %>
              <%= flash[:alert] %>
            </div>

          <table>
            <%# ログインフォーム_メールアドレス %>
            <tr class="user-email d-flex align-items-start">
              <td class="email-tag tag">メールアドレス</td>
              <td class="indispensable"><span class="indispensable-tag">必須</span></td>
              <td class="email-filed text-filed">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", "data-testid": 'email' %>
              </td>
            </tr>
            <%# ログインフォーム_パスワード %>
            <tr class="user-password d-flex align-items-start">
              <td class="password-tag tag">パスワード</td>
              <td class="indispensable"><span class="indispensable-tag">必須</span></td>
              <td class="password-filed text-filed">
                <%= f.password_field :password, autocomplete: "current-password", "data-testid": 'password' %>
              </td>
            </tr>
          </table>

            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>

            <%# ログインボタン %>
            <div class="sell-btn-contents">
              <%= f.submit "ログイン",class: "btn btn-dark btn-lg", "data-testid": 'submit'  %>
              
            </div>
          <% end %>
          <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
<%= render "shared/footer" %>



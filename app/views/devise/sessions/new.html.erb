<%= render "shared/header"%>
<div class="container">
  <div class="main row">

    <%# サイドメニュー %>
    <div class="side-menu col-2">
    </div>
   
    <div class="card-registration col-10">
      <h3>ユーザーログイン</h3>

        <%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>
          <div class='login-flash-message'>
            <%= flash[:notice] %>
            <%= flash[:alert] %>
          </div>

        <table>
          <tr class="user-email d-flex align-items-start">
            <td class="email-tag tag">メールアドレス</td>
            <td class="indispensable">必須</td>
            <td class="email-filed text-filed">
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </td>
          </tr>

          <tr class="user-password d-flex align-items-start">
            <td class="password-tag tag">パスワード</td>
            <td class="indispensable">必須</td>
            <td class="password-filed text-filed">
              <%= f.password_field :password, autocomplete: "current-password" %>
            </td>
          </tr>
        </table>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit "ログイン" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

<%= render "shared/footer" %>



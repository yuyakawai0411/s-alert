<div class="card">
  <ul class="card-list">
    <% cards.each do |card| %>
      <%= link_to card_path(card.id) do %>
      
      <div class="card-right">
        <%# 氏名 %>
        <li class="card-name">氏名
          <ul class="name-list">
            <li class="first-name"><%= card.s_first_name %></li>
            <li class="last-name"><%= card.s_last_name %></li>
            <li class="first-name-kana"><%= card.s_first_name_kana %></li>
            <li class="last-name-kana"><%= card.s_last_name_kana %></li>
          </ul>
        </li>
      
        <%# 会社・部署 %>
        <li class="card-company">会社/部署
          <ul class="company-list">
            <li class="company-name"><%= card.s_company %></li>
            <li class="company-form"><%= card.s_company_form_id%></li>
            <li class="department"><%= card.s_department %></li>
          </ul>
        </li>
      
        <%# 電話番号 %>
        <li class="card-phone">電話番号
          <%= card.s_phone_number%>
        </li>
        
        <%# 誕生日 %>
        <li class="card-birtday">誕生日
          <%= card.s_birth_day %>
        </li>
      </div>

      <div class="card-left">
        <%# 人物画像 %>
        <li calss="card-image">
          <% if card.image.attached? %>
            <%= image_tag card.image.variant(resize: '20x20'), class: "card-ditail-image" %>
          <% else %>
            <%= image_tag "sample_image.png", class: "card-ditail-image" %>
          <% end %>
        </li>
      
      <% end %>

        <%# お気に入り %>
        <li class="card-favorites">
          <% if user_signed_in? && card.favorited_by?(current_user) %>
            <%=link_to "お気に入り解除", card_favorites_path(card.id), method: :delete %>
          <% else %>
            <%=link_to "お気に入り登録", card_favorites_path(card.id), method: :post %>
          <% end %>
        </li>
      </div>
  
    <% end %>
  </ul>
</div>
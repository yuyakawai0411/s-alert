<div class="card-format">

  <% cards.each do |card| %>
    <%= link_to card_path(card.id) do %>
  <%# 人物画像 %>
    <div calss="card-person-image">
    <% if card.image.attached? %>
      <%= image_tag card.image.variant(resize: '20x20'), class: "card-ditail-image" %>
    <% else %>
      <%= image_tag "sample_image.png", class: "card-ditail-image" %>
    <% end %>
    </div>
  <%# 氏名 %>
    <div class="card-name">氏名
      <p class="first-name"><%= card.s_first_name %></p>
      <p class="last-name"><%= card.s_last_name %></p>
      <p class="first-name-kana"><%= card.s_first_name_kana %></p>
      <p class="last-name-kana"><%= card.s_last_name_kana %></p>
    </div>
  <%# 会社・部署 %>
    <div class="card-company-info">会社/部署
      <p class="company"><%= card.s_company %></p>
      <p class="company-form"><%= card.s_company_form_id%></p>
      <p class="department"><%= card.s_department %></p>
    </div>
  <%# 電話番号 %>
    <div class="card-phone">電話番号
      <p class="phone-number"><%= card.s_phone_number%></p>
    </div>
  <%# 誕生日 %>
    <div class="card-birtday">誕生日
      <p class="birthday"><%= card.s_birth_day %></p>
    </div>
  <%# 趣味 %>
    <div class="card-hobby">趣味
      <p class="hobbyy"><%= card.s_hobby%></p>
    </div>

    <% end %>

  <%# お気に入り %>
    <div class="card-favorites">お気に入り
      <% if user_signed_in? && card.favorited_by?(current_user) %>
        <p><%=link_to "お気に入り解除", card_favorites_path(card.id), method: :delete %></p>
      <% else %>
        <p><%=link_to "お気に入り登録", card_favorites_path(card.id), method: :post %></p>
      <% end %>
    </div>
  
  <% end %>
</div>
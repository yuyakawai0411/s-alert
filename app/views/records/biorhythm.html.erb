<%= render "shared/header"%>
<div class="main-background">
  <div class="container">
    <div class="main row">

      <%# サイドメニュー %>
      <div class="side-menu col-2">
        <%= render "shared/side-menu" %>
      </div>
    
    <div class="record col-10">
        <article class="record-add">
        <%# 着信履歴登録フォーム %>
          <h1 class="share-cards-title"><%= "#{@card.s_last_name}さん感情登録"%></h1>
          <div class="d-flex">
            <%# 着信履歴登録フォーム_手動 %>
            <div class="call-input-form">
              <%= form_with model: [@card, @record], local: true do |f| %> 
                <%= render 'shared/error_messages', model: f.object %>
                <table>
                  <tr class="record-date d-flex align-items-start input-form">
                    <td class="date-tag tag">日付</td>
                    <td class="indispensable"><span class="indispensable-tag">必須</span></td>
                    <td class="date-filed text-filed">
                      <%= f.date_field :date %> 
                    </td>
                  </tr>

                  <tr class="record-time d-flex align-items-start input-form">
                    <td class="time-tag tag">時間</td>
                    <td class="indispensable"><span class="indispensable-tag">必須</span></td>
                    <td class="time-filed text-filed">
                      <%= f.collection_select(:phone_time_id, PhoneTime.all, :id, :time, {}, {class:"select-box", id:"record-phone-time"})%>  
                    </td>
                  </tr>

                  <tr class="record-expression d-flex align-items-start input-form">
                    <td class="expression-tag tag">感情</td>
                    <td class="indispensable"><span class="indispensable-tag">必須</span></td>
                    <td class="expression-filed text-filed">
                      <%= f.collection_select(:expression_id, Expression.all, :id, :status, {}, {class:"select-box", id:"record-expression"})%>  
                    </td>
                  </tr>

                </table>
                <div class="sell-btn-contents">
                  <%= f.hidden_field :phone_call_id, value: "2"%>
                  <%= f.submit "作成", class:"btn btn-dark", id:"record-submit" %>
                </div>
              <% end %>
            </div>

          </div>
        </article>

        <article class="record-list">
          <h1 class="share-cards-title"><%= "#{@card.s_last_name}さん感情一覧"%></h1>
          <%# 着信履歴一覧表示 %>
          <table class="record-colum">
            <tr class="record-description record-colum-title">
              <td class="record-list-date record-column-value">日付</td>
              <td class="record-list-time record-column-value">時間</td>
              <td class="record-list-expression record-column-value">感情</td>
              <td class="record-list-delete record-column-value">削除</td>
            </tr>
          </table>
          <div class="record-notice-list">
           <table class="record-colum">
            <% @records.each do |record| %>
              <tr>
                <td class="record-list-date record-column-value"><%= record.date %></td>
                <td class="record-list-time record-column-value"><%= record.phone_time.time %></td> 
                <td class="record-list-expression record-column-value"><%= record.expression.status %></td>
                <td class="record-list-delete record-column-value"><%= link_to "削除", card_record_path(@card.id, record.id), method: :delete, class: "record-delete" %></td>
              </tr>
            <% end %>
            </table>
          </div>
        </article>
      </div>
    </div>
  </div>
</div>
    <%= render "shared/footer" %>